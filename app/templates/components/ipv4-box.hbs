	          <!-- Horizontal Form -->
		<div class="box box-primary">
			<div class="box-header with-border">
				<h3 class="box-title">LAN</h3>
				<div class="box-tools pull-right" data-toggle="tooltip" title="Enable IPv4">
                  {{btn-togle enable = network.useipv4 }}
				</div>
			</div>

	            <!-- /.box-header -->
	            <!-- form start -->
		<form class="form-horizontal">
			<div class="box-body">
				<div class="input-group">
					<div class="pull-right" data-toggle="tooltip" title="Enable DHCP">
						{{btn-togle enable = network.usedhcp}}
					</div>
				</div>
                <br>
	          	<div class="input-group">
		            <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
		            {{input value= network.address class = "form-control" placeholder = "IPv4 address" disabled = (unless network.useipv4 true)}}
	          	</div>
	                  <!-- /.input-group -->
	          <br>
	          <div class="input-group">
	            <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
	            {{input value= network.netmask class = "form-control" placeholder = "IPv4 netmask" disabled = (unless network.useipv4 true)}}
	          </div>
	                  <!-- /.input-group -->
	          <br>
	          <div class="input-group">
	            <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
	            {{input value= network.gateway class = "form-control" placeholder = "IPv4 gateway" disabled = (unless network.useipv4 true)}}
	          </div>
	                  <!-- /.input-group -->
	          <br>
	          <div class="input-group">
	            <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
	            {{input value= network.primarydns class = "form-control" placeholder = "IPv4 primary DNS" disabled = (unless network.useipv4 true)}}
	          </div>
	                  <!-- /.input-group -->
	          <br>
	          <div class="input-group">
	            <span class="input-group-addon"><i class="fa fa-laptop"></i></span>
	            {{input value= network.secondarydns class = "form-control" placeholder = "IPv4 secondary DNS" disabled = (unless network.useipv4 true)}}
	          </div>
	                  <!-- /.input-group -->
	          <br>
              </div>
              <!-- /.box-body -->
              <div class="box-footer">
                <button type="button" class="btn btn-default" {{action "cancel"}}>Cancel</button>
                <div class=" pull-right">
                <button type="button" class="btn btn-primary" {{action "apply"}}>Apply</button>
                <button type="button" class="btn btn-primary" {{action "applyAndSave"}}>Apply and Save</button>
                </div>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->