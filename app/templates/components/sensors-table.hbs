
<div class="box">
  <div class="box-header">
    <h3 class="box-title">Sensors:</h3>

<div class="pull-right box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                {{#link-to 'sensors.add' class="btn btn-default btn-sm pull-right"}}<i class="fa fa-plus"></i> Add sensor{{/link-to}}
                </div>
              </div>

  </div>
  <!-- /.box-header -->
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <tbody><tr>
        <th>Id</th>
        <th>Name</th>
        <th>Place</th>
        <th>Type</th>
        <th>Value</th>
        <th>Online</th>  
        <th></th>
      </tr>
      {{#each data as |sensor|}}
      <tr>
        <td>{{sensor.id}}</td>
        <td>{{sensor.name}}</td>
        <td>{{sensor.place}}</td>
        <td>{{sensor.type}}</td>
        <td>{{sensor.value}}</td>
        <td>{{sensor.online}}</td>
        <td>
          <div class="tools">
            {{#link-to 'sensors.show' sensor.id}}<i class="fa fa-edit"></i>{{/link-to}}
            {{#link-to 'sensors.delete' sensor.id}}<i class="fa fa-trash-o"></i>{{/link-to}}

          </div>
        </td>
      </tr>
      {{/each}}
    </tbody></table>
  </div>
  <!-- /.box-body -->
</div>
